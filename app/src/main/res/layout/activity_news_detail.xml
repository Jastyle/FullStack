<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp8"
    android:background="@color/white"
    tools:context="com.jastyle.fullstack.ui.activity.NewsDetailActivity">
    <include
        layout="@layout/common_top"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>
    <com.jastyle.fullstack.ui.view.ObservableScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp5"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp10"
                    android:lineSpacingExtra="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:textSize="20sp"
                    android:textColor="@color/news_title_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp44"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/dp5"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/header_avater_iv"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:src="@mipmap/ic_default"/>
                    <TextView
                        android:id="@+id/header_source_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp10"
                        android:gravity="center_vertical"
                        android:textColor="@color/news_title_color"
                        android:textSize="@dimen/sp16"/>
                    <TextView
                        android:id="@+id/header_attention_btn"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/red_bg"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:text="关注"/>
                </LinearLayout>
            </LinearLayout>
            <WebView
                android:id="@+id/content_wv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none">

            </WebView>
        </LinearLayout>
    </com.jastyle.fullstack.ui.view.ObservableScrollView>


</LinearLayout>
