<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/common_title_ll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp44"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_back"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:id="@+id/source_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp20"
        android:gravity="left|center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/avater_iv"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30" />
        <TextView
            android:id="@+id/source_tv"
            style="@style/news_text_style"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:textColor="@color/news_title_color"
            android:textSize="@dimen/sp16"/>
    </LinearLayout>
    <TextView

        android:id="@+id/attention_btn"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/red_bg"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:visibility="gone"
        android:text="关注"/>
    <ImageView
        android:id="@+id/more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_more_title_detail"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp5"
        android:scaleType="centerCrop"/>

</LinearLayout>