<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp10">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <include layout="@layout/include_news_title"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <include layout="@layout/include_news_bottom"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp130"
        android:layout_height="@dimen/dp80">
        <ImageView
            android:id="@+id/right_video_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp15"
            android:src="@mipmap/ic_default"/>
        <LinearLayout
            android:id="@+id/time_bg_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp40"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_rectangle_translucent"
            android:padding="@dimen/dp3"
            android:layout_margin="@dimen/dp5">
            <TextView
                android:id="@+id/video_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/sp8"
                android:textColor="@color/white"
                android:drawableLeft="@mipmap/icon_video_play"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>