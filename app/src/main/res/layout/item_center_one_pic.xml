<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp10">

    <include layout="@layout/include_news_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp180"
        android:layout_marginTop="@dimen/dp10">
        <ImageView
            android:id="@+id/video_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_default"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/play_video_iv"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:background="@drawable/selector_play_video"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:id="@+id/time_bg_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_rectangle_translucent"
            android:padding="@dimen/dp3"
            android:layout_margin="@dimen/dp4">
            <TextView
                android:id="@+id/video_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/dp30"
                android:gravity="center"
                android:textSize="@dimen/sp8"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/include_news_bottom"/>
</LinearLayout>